<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Student Management Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            height: 100vh;
            background-color: #0d6efd;
            color: white;
            padding: 20px;
        }

            .sidebar h4 {
                margin-bottom: 30px;
            }

            .sidebar a {
                color: white;
                display: block;
                margin-bottom: 15px;
                text-decoration: none;
            }

        .card-icon {
            width: 40px;
            height: 40px;
            display: inline-block;
            border-radius: 5px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h4>Student Management System</h4>
                <a asp-controller="AdminPanel" asp-action="Dashboard">📊 Dashboard</a>
                <a asp-controller="StudentMangement" asp-action="ShowStudents">👨‍🎓 Students</a>
                <a asp-controller="Department" asp-action="ShowAllDepartments">🏢 Departments</a>
                <a asp-controller="Subject" asp-action="Show">📚 Subjects</a>
                <a href="#">📈 Log Out</a>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
                <h3 class="mb-4">Control Panel</h3>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="d-flex align-items-center">
                                <div class="card-icon bg-primary"></div>
                                <div>
                                    <h5>@ViewBag.StudentsCount</h5>
                                    <small>Total Students</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="d-flex align-items-center">
                                <div class="card-icon bg-success"></div>
                                <div>
                                    <h5>@ViewBag.DepartmentsCount</h5>
                                    <small>Departments</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="d-flex align-items-center">
                                <div class="card-icon bg-warning"></div>
                                <div>
                                    <h5>@ViewBag.SubjectsCount</h5>
                                    <small>Subjects</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="d-flex align-items-center">
                                <div class="card-icon bg-danger"></div>
                                <div>
                                    <h5>89</h5>
                                    <small>Average Score</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts and Tables -->
                <div class="row">
                    <div class="col-md-6">
                        <canvas id="performanceChart"></canvas>
                    </div>
                    <div class="col-md-3">
                        <h5>Departments</h5>
                        @if (ViewBag.TopDepartments != null)
                        {
                            <ul class="list-group">
                                @foreach (var dept in ViewBag.TopDepartments)
                                {
                                    <li class="list-group-item">
                                        @dept.Name (Students: @dept.Students?.Count ?? 0)
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No departments available.</p>
                        }


                    </div>
                    <div class="col-md-3">
                        <h5>Recent Students</h5>

                        @if (ViewBag.LastStudents != null)
                        {
                            <ul class="list-group">
                                @foreach (var student in ViewBag.LastStudents)
                                {
                                    <li class="list-group-item">
                                        @student.Name - @student.InrollDate.ToShortDateString()
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No recent students found.</p>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart Script -->
    <script>
        const ctx = document.getElementById('performanceChart').getContext('2d');
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June'],
            datasets: [{
              label: 'Student Performance',
              data: [75, 90, 85, 60, 70, 95],
              backgroundColor: '#0d6efd'
            }]
          },
          options: {
            scales: {
              y: { beginAtZero: true }
            }
          }
        });
    </script>
</body>
</html>
