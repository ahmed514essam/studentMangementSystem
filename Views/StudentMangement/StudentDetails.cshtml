@model Student

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">

    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4"> Student Information</h2>

        <div class="row">

            <div class="col-md-6">
                <h5> Personal Details</h5>
                <ul class="list-group mb-3">
                    <li class="list-group-item"><strong>Name: </strong> @Model.Name</li>
                    <li class="list-group-item"><strong> Student Number : </strong> @Model.Id</li>
                    <li class="list-group-item"><strong> Email:</strong> @Model.Email</li>
                    <li class="list-group-item"><strong> Phone:</strong> @Model.PhoneNumber</li>
                    <li class="list-group-item"><strong>Address:</strong> @Model.Address</li>

                </ul>
            </div>

            <div class="col-md-6">
                <h5> Academic Info</h5>
                <ul class="list-group mb-3">
                    <li class="list-group-item"><strong>Department:</strong> @Model.Department?.Name</li>
                    <li class="list-group-item"><strong> Student Year:</strong> @Model.StudyYear?.Name</li>
                    <li class="list-group-item"><strong> The Sport:</strong> @Model.Sport?.Name</li>
                </ul>
            </div>

        </div>

      

        <hr />

        <h4 class="mt-4"> Subjects</h4>

        <table class="table table-bordered table-striped mt-2">
            <thead class="table-dark">
                <tr>
                    <th> Subject</th>
                    <th>Credit Hours </th>
                    <th>Doctor</th>
                    <th>Total Marks</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.StudentSubjects)
                {
                    <tr>
                        <td>@item.Subject?.Name</td>
                        <td>@item.Subject?.CreditHours</td>
                        <td>@item.Subject?.SubjectDoctor</td>
                        <td class="fw-bold">@item.TotalMarks</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-3">
            <a asp-controller="StudentMangement" asp-action="ShowStudents" class="btn btn-secondary">  Back To All Students</a>
        </div>

    </div>

</div>
