@model StudentDto


@{
    ViewData["Title"] = "Edit Student";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-10">

            <div class="card shadow-lg border-0">

                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="mb-0"> Edit Student</h3>
                </div>

                <div class="card-body p-4">

                    <form asp-action="EditStudent" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">

                            <!-- Student Name -->
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">Student Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter full name" required value="@Model.Name"/>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold">Email</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="example@mail.com" required value="@Model.Email" />
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="01xxxxxxxxx" value="@Model.PhoneNumber" />
                            </div>

                            <!-- Address -->
                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label fw-bold">Address</label>
                                <input asp-for="Address" class="form-control" value="@Model.Address" />
                            </div>






                            <!-- Enroll Date -->



                            <div class="col-md-6">
                                <label class="form-label fw-bold">Enroll Date</label>
                                <input asp-for="InrollDate" class="form-control" type="date" value="@Model.InrollDate" />
                            </div>

                            


                            <div class="col-md-6">
                                <label asp-for="DepartmentId" class="col-form-label fw-bold">Department</label>
                                <select asp-for="DepartmentId" class="form-control">
                                    <option value="@Model.DepartmentId">@Model.DepartmentName</option>
                                    @foreach (var dept in ViewBag.Departments)
                                    {
                                        <option value="@dept.Id">@dept.Name</option>
                                    }
                                </select>


                            </div>




                            <!-- Study Year -->
                            <div class="col-md-6">
                                <label asp-for="StudyYearId" class="form-label fw-bold">Study Year</label>
                                <select asp-for="StudyYearId" class="form-control">
                                    <option value="@Model.StudyYearId">@Model.StudyYearName</option>
                                    @foreach (var o in ViewBag.StudyYears)
                                    {
                                        <option value="@o.Id">@o.Name</option>
                                    }
                                    }
                                </select>

                            </div>

                            <!-- Sport -->
                            <div class="col-md-6">
                                <label asp-for="SportId" class="form-label fw-bold">Sport</label>

                                <select asp-for="SportId" class="form-control">
                                    <option value="@Model.SportId">@Model.SportName</option>
                                    @foreach (var s in ViewBag.Sports)
                                    {
                                        <option value="@s.Id">@s.Name</option>
                                    }
                                    }
                                </select>

                            </div>

                            <!-- Status -->
                            <div class="col-md-6">

                                <label asp-for="StatusId" class="form-label fw-bold">Status</label>

                                <select asp-for="StatusId" class="form-control">
                                    <option value="@Model.StatusId">@Model.StatusName</option>
                                    @foreach (var s in ViewBag.Status)
                                    {
                                        <option value="@s.Id">@s.Name</option>
                                    }
                                    }
                                </select>



                            </div>

                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success px-5 py-2 fw-bold">
                                ✔  Update
                            </button>

                            <a asp-controller="StudentMangement" asp-action="ShowStudents" class="btn btn-secondary px-4 ms-2">
                                ↩ Back to List
                            </a>
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>

</div>
