@model Department

@{
    ViewData["Title"] = "Department Details";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="fw-bold text-primary">@Model.Name</h2>
                    <p class="text-muted">@Model.DepartmentHead</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Subjects Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white fw-bold">
                     Department Subjects
                </div>
                <div class="card-body">

                    @if (Model.Subjects != null && Model.Subjects.Any())
                    {
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>م</th>
                                    <th> Subject Name</th>
                                    <th>Credit Hours</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sub in Model.Subjects)
                                {
                                    <tr>
                                        <td>@sub.Id</td>
                                        <td>@sub.Name</td>
                                        <td>@sub.CreditHours</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">There isn't any Subjects with this Department'</p>
                    }

                </div>
            </div>
        </div>
    </div>

    <!-- Students Section -->
    <div class="row">
        <div class="col-md-12">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white fw-bold">
Students Signed in Department
</div>

                <div class="card-body">

                    @if (Model.Students != null && Model.Students.Any())
                    {
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>م</th>
                                    <th> Student Name</th>
                                    <th> Email</th>
                                    <th>Status</th>
                                    <th> Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var st in Model.Students)
                                {
                                    <tr>
                                        <td>@st.Id</td>
                                        <td>@st.Name</td>
                                        <td>@st.Email</td>
                                        <td>@st.Status</td>
                                        <td>@st.Address</td>

                                        <td>
                                            @if (st.StudentSubjects != null && st.StudentSubjects.Any())
                                            {
                                                <ul class="mb-0">
                                                    @foreach (var ss in st.StudentSubjects)
                                                    {
                                                        <li>@ss.Subject.Name</li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <span class="text-muted"> No Subjects here! </span>
                                            }
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">There isn't any Students here!'</p>
                    }

                </div>
            </div>

        </div>
    </div>

</div>
